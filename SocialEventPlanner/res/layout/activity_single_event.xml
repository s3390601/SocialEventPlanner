<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.s3390601.socialeventplanner.view.SingleEventActivity" >

    <TextView
        	style="@style/TitlesStyle"
            android:id="@+id/title_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:labelFor="@+id/title_view"
            android:text="@string/title"
             />

      <TextView
          	style="@style/ItemStyle"
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/title_view_label"
            android:layout_toRightOf="@+id/attendees_view_label"
            />
      
      <TextView
          	style="@style/TitlesStyle"
            android:id="@+id/date_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_view"
            
            android:layout_marginLeft="7dp"
            android:labelFor="@+id/date_view"
            android:text="@string/date"
             />

      <TextView
          	style="@style/ItemStyle"
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/date_view_label"
            android:layout_toRightOf="@id/attendees_view_label"
            />
      <TextView
          	style="@style/TitlesStyle"
            android:id="@+id/time_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_view"
            
            android:layout_marginLeft="7dp"
            android:labelFor="@+id/time_view"
            android:text="@string/time"
             />

      <TextView
          	style="@style/ItemStyle"
            android:id="@+id/time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/time_view_label"
            android:layout_toRightOf="@id/attendees_view_label"
            />
      
	<TextView
	    	style="@style/TitlesStyle"
            android:id="@+id/venue_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_view"
            
            android:layout_marginLeft="7dp"
            android:labelFor="@+id/venue_view"
            android:text="@string/venue"
             />

      <TextView
          	style="@style/ItemStyle"
            android:id="@+id/venue_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/venue_view_label"
            android:layout_toRightOf="@id/attendees_view_label"
            />

      <TextView
          	style="@style/TitlesStyle"
            android:id="@+id/location_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_view"
            
            android:layout_marginLeft="7dp"
            android:labelFor="@+id/location_view"
            android:text="@string/location"
             />

      <TextView
          	style="@style/ItemStyle"
            android:id="@+id/location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/location_view_label"
            android:layout_toRightOf="@id/attendees_view_label"
            />
      
   	<TextView
   	    	style="@style/TitlesStyle"
            android:id="@+id/notes_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_view_label"
            android:layout_marginLeft="7dp"
            android:labelFor="@+id/notes_view"
            android:text="@string/notes"
             />

	<TextView
	    	style="@style/ItemStyle"
            android:id="@+id/notes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/notes_view_label"
            android:layout_toRightOf="@id/attendees_view_label"
            />
	<TextView
	    	style="@style/TitlesStyle"
            android:id="@+id/attendees_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notes_view"
            
            android:layout_marginLeft="7dp"
            android:labelFor="@+id/attendees_listView"
            android:text="@string/attendees"
             />
      <ListView
          style="@style/ItemStyle"
          android:id="@+id/attendees_listView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/attendees_view_label"
          android:layout_below="@+id/attendees_view_label" >
      </ListView>


</RelativeLayout>
